<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mood Tracker - Mental Health App</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-image: url('/images/coklat2.png');
      background-size: cover;
      background-position: center;
      color: #000;
    }

    .jumbotron {
      background: rgba(255, 255, 255, 0.85);
      border-radius: 20px;
      padding: 2rem;
      backdrop-filter: blur(4px);
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
      color: #000;
    }

    .form-control, .custom-select, textarea {
      background-color: rgba(255, 255, 255, 0.95);
      color: #000;
    }

    .form-control:focus, .custom-select:focus {
      box-shadow: none;
      border-color: #aaa;
    }

    .btn-outline-dark {
      color: #000;
      border-color: #000;
    }

    .btn-outline-dark:hover {
      background-color: #000;
      color: #fff;
    }

    .mood-history {
      background-color: rgba(255,255,255,0.85);
      border-radius: 10px;
      padding: 1rem;
      margin-top: 2rem;
      color: #000;
    }

    .mood-history li {
      background-color: rgba(255,255,255,1);
      border: none;
      color: #000;
    }

    .mood-history small {
      color: #555;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="jumbotron text-center">
      <h1 class="display-4">Mood Tracker</h1>
      <p class="lead"><%= editMode ? 'Edit Mood Kamu' : 'Bagaimana perasaanmu hari ini?' %></p>
      <hr class="my-4">

      <!-- Form input/edit mood -->
      <form action="<%= editMode ? '/mood/edit/' + mood._id : '/mood/save' %>" method="POST">
        <div class="form-group text-left">
          <label for="moodSelect">Pilih Mood:</label>
          <select class="custom-select" id="moodSelect" name="mood" required>
            <option value="">-- Pilih --</option>
            <option value="Happy" <%= editMode && mood.mood === 'Happy' ? 'selected' : '' %>>üòä Senang</option>
            <option value="Sad" <%= editMode && mood.mood === 'Sad' ? 'selected' : '' %>>üò¢ Sedih</option>
            <option value="Angry" <%= editMode && mood.mood === 'Angry' ? 'selected' : '' %>>üò† Marah</option>
            <option value="Anxious" <%= editMode && mood.mood === 'Anxious' ? 'selected' : '' %>>üò∞ Cemas</option>
            <option value="Calm" <%= editMode && mood.mood === 'Calm' ? 'selected' : '' %>>üòå Tenang</option>
          </select>
        </div>
        <div class="form-group text-left">
          <label for="note">Catatan (opsional):</label>
          <textarea class="form-control" id="note" name="note" rows="3" placeholder="Ceritakan sedikit tentang harimu..."><%= editMode ? mood.note : '' %></textarea>
        </div>
        <button type="submit" class="btn btn-outline-dark">
          <%= editMode ? 'Update Mood' : 'Simpan Mood' %>
        </button>
        <a href="/" class="btn btn-outline-dark ml-2">Kembali</a>
      </form>

      <!-- Riwayat mood -->
      <% if (typeof moods !== 'undefined' && moods.length > 0) { %>
        <div class="mood-history text-left mt-5">
          <h4>Riwayat Mood Kamu</h4>
          <ul class="list-group">
            <% moods.forEach(m => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= m.mood %></strong> - <%= m.note || 'Tanpa catatan' %><br>
                  <small><%= new Date(m.createdAt).toLocaleString() %></small>
                </div>
                <div>
                  <!-- Tombol Edit -->
                  <a href="/mood/edit/<%= m._id %>" class="btn btn-sm btn-outline-dark mr-2">‚úèÔ∏è</a>
                  <!-- Tombol Hapus -->
                  <form action="/mood/delete/<%= m._id %>" method="POST" class="d-inline" onsubmit="return confirm('Yakin ingin menghapus mood ini?')">
                    <button type="submit" class="btn btn-sm btn-outline-dark">üóëÔ∏è</button>
                  </form>
                </div>
              </li>
            <% }) %>
          </ul>
        </div>
      <% } %>

    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
