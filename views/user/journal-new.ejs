<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tulis Jurnal</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: #fefaf6;
      padding: 40px 20px;
      margin: 0;
    }

    .container {
      max-width: 700px;
      margin: auto;
      background: #fffefb;
      padding: 40px 30px;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.08);
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
      font-weight: 600;
      color: #444;
    }

    label {
      font-weight: 600;
      display: block;
      margin-bottom: 6px;
      color: #333;
    }

    input[type="text"],
    textarea {
      width: 100%;
      padding: 12px;
      margin-bottom: 24px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 15px;
      transition: border-color 0.2s ease;
    }

    input[type="text"]:focus,
    textarea:focus {
      border-color: #f4a261;
      outline: none;
    }

    input::placeholder,
    textarea::placeholder {
      color: #aaa;
    }

    .btn {
      display: inline-block;
      padding: 12px 28px;
      background-color: #f4a261;
      color: white;
      font-weight: 600;
      font-size: 16px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-decoration: none;
    }

    .btn:hover {
      background-color: #e76f51;
    }

    .view-btn {
      margin-left: 12px;
      background-color: #2a9d8f;
    }

    .view-btn:hover {
      background-color: #21867a;
    }

    .back-link {
      display: block;
      margin-top: 30px;
      text-align: center;
      color: #666;
      text-decoration: none;
      font-size: 14px;
    }

    .back-link:hover {
      text-decoration: underline;
      color: #444;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Tulis Jurnal Baru</h2>
    <form id="journalForm" action="/journal" method="POST">
      <label for="title">Judul</label>
      <input type="text" name="title" id="title" placeholder="Masukkan judul jurnal" required>

      <label for="content">Isi Jurnal</label>
      <textarea name="content" id="content" rows="6" placeholder="Tulis isi jurnal di sini..." required></textarea>

      <button type="submit" class="btn">üìù Simpan</button>
      <a href="/journal/user" class="btn view-btn">üìì Lihat Jurnal Saya</a>
    </form>

    <a href="/" class="back-link">‚Üê Kembali ke Halaman Utama</a>
  </div>

  <script>
    let isFormDirty = false;

    const title = document.getElementById('title');
    const content = document.getElementById('content');
    const form = document.getElementById('journalForm');

    // Tandai form sebagai 'dirty' ketika ada perubahan
    [title, content].forEach(input => {
      input.addEventListener('input', () => {
        isFormDirty = true;
      });
    });

    // Hapus tanda dirty ketika form disubmit
    form.addEventListener('submit', () => {
      isFormDirty = false;
    });

    // Cegah keluar dari halaman jika form belum disimpan
    window.addEventListener('beforeunload', function(e) {
      if (isFormDirty) {
        e.preventDefault();
        e.returnValue = ''; // Untuk Chrome, Safari, Firefox
      }
    });
  </script>
</body>
</html>
